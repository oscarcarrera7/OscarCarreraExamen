<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OscarCarreraExamen.resumen">
    <ContentPage.Content>
        <Grid Margin="20,150,20,20">
              
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.10*" />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>

            <Label>Resumen </Label>
            <Label x:Name="lblUser" Grid.Column="1" Grid.Row="1"  TextColor="Black" FontSize="12"/>
            <Label x:Name="txtNombre" Grid.Column="1"  TextColor="Black" FontSize="12"/>
            <Label x:Name="txtPago" Grid.Column="1" Grid.Row="2"  TextColor="Black" FontSize="12"/>
            <Label Grid.Row="2" Text ="Total a pagar"/>
            <Label Grid.Row="1" Text ="Nombre"/>




        </Grid>
    </ContentPage.Content>
</ContentPage>