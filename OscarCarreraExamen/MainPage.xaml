<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OscarCarreraExamen.MainPage">

    <StackLayout>
        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" />
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Login" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="txtUser" Placeholder="Ingrese el Usuario"/>
        <Entry x:Name="txtPass" Placeholder="Ingrese la Clave" IsPassword="True"/>

        <Button x:Name="btnAbrir"
                Text="Ingresar"
                Clicked="btnAbrir_Clicked"/>


    </StackLayout>

</ContentPage>
